<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="style_text">
        <item name="android:textSize">16sp</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="style_text_black" parent="style_text">
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="style_text_white" parent="style_text">
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="style_text_clickable">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_clickable</item>
    </style>

    <style name="style_text_hint">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>

</resources>
