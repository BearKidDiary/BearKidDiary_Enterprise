<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_students_letter_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_light"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:text="A"
        android:textColor="#454545" />

    <RelativeLayout
        android:id="@+id/rl_students_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_translucent_white"
        android:minHeight="64dp">


        <com.bearkiddiary.enterprise.ui.view.CircleImageview
            android:id="@+id/iv_students_avatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/avatar" />


        <TextView
            style="@style/style_text_black"
            android:id="@+id/tv_students_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/iv_students_avatar"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="hhhh" />
    </RelativeLayout>

</LinearLayout>